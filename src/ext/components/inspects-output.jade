.flow-widget
  h3.flow-hint
    i.fa.fa-table
    | Data

  // ko ifnot:hasTables
  blockquote No data found.
  // /ko

  // ko if:hasTables
  h4 Tables
  table.flow-form
    thead
      tr
        th(width='1') &nbsp;
        th Name
        th Description
        th Actions
    tbody
      // ko foreach:tables
      tr
        td
          i.fa.fa-table
        td
          a(href='#' data-bind='text:name, click:inspect')
        td(data-bind='text:description')
        td
          button.flow-button(type='button' data-bind='click:describe')
            i.fa.fa-sitemap
            span Describe
          // ko if:canPlot
          button.flow-button(type='button' data-bind='click:plot')
            i.fa.fa-bar-chart
            span Plot
          // /ko
      // /ko
  // /ko
  

