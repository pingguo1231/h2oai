.flow-widget
  h3.flow-hint
    i.fa.fa-cube
    | Model

  .flow-margin-after
    table.flow-form
      tbody
        tr
          th.flow-narrow Key:
          td.flow-wide(data-bind='text:key.name')
        tr
          th.flow-narrow Algorithm:
          td.flow-wide(data-bind='text:algo')
        tr 
          th(width='1') Actions:
          td
            +button('Predict&hellip;', 'bolt', 'predict')
            +button('Clone this model&hellip;', 'copy', 'cloneModel')
            +button('Inspect', 'list', 'inspect')
      
  h4 Model Parameters
  div(data-bind="css:{ 'flow-unhide':isExpanded }")
    .flow-right.flow-margin-after 
      // ko ifnot:isExpanded
      +button('Show all parameters', 'angle-double-down', 'toggle')
      // /ko
      // ko if:isExpanded
      +button('Show modified parameters', 'angle-double-up', 'toggle')
      // /ko
    table.flow-form.flow-form-ruled
      thead
        tr
          th Parameter
          th Value
          th Description
      tbody
        // ko foreach:inputParameters
        tr(data-bind="css:{ 'flow-hide':isModified }")
          th(data-bind='text:label')
          td(data-bind='text:value')
          td(data-bind='text:help')
        // /ko

  // ko if:output
  h4 Model Output
  .flow-plot(data-bind='raw:output')
  // /ko

  // ko if:dlTrainingMetrics
  h4 Training Metrics
  .flow-plot(data-bind='raw:dlTrainingMetrics')
  // /ko

  // ko if:dlScoringHistory
  h4 Scoring History
  .flow-plot(data-bind='raw:dlScoringHistory')
  // /ko

  // ko if:glmVariableImportancePlot
  h4 Normalized Coefficient Magnitudes
  .flow-plot(data-bind='raw:glmVariableImportancePlot')
  // /ko
