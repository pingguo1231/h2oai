.flow-widget
  h3.flow-hint
    i.fa.fa-cube
    | Model

  .flow-margin-after
    table.flow-form
      tbody
        tr
          th.flow-narrow Key:
          td.flow-wide(data-bind='text:key')
        tr 
          th(width='1') Actions:
          td
            button.flow-button(type='button' data-bind='click:predict')
              i.fa.fa-bolt
              span Predict
            button.flow-button(type='button' data-bind="click:cloneModel")
              i.fa.fa-copy
              span Clone this model&hellip;
      
  div(data-bind="css:{ 'flow-unhide':isExpanded }")
    .flow-right.flow-margin-after 
      // ko ifnot:isExpanded
      button.flow-button(type='button' data-bind='click:toggle')
        span Show all parameters
        i.fa.fa-angle-double-down
      // /ko
      // ko if:isExpanded
      button.flow-button(type='button' data-bind='click:toggle')
        span Show modified parameters
        i.fa.fa-angle-double-up
      // /ko
    table.flow-form.flow-form-ruled
      thead
        tr
          th Parameter
          th Value
          th Description
      tbody
        // ko foreach:inputParameters
        tr(data-bind="css:{ 'flow-hide':isModified }")
          th(data-bind='text:label')
          td(data-bind='text:value')
          td(data-bind='text:help')
        // /ko
