tr(data-bind="css:{'bg-danger':hasError, 'bg-warning':hasWarning, 'bg-info':hasInfo}, visible:isVisible")
  th
    label(data-bind='text:label')
    span(data-bind='visible:isRequired') *
  td(colspan='2')
    div(style='height:25px')
      input.flow-textbox(type='text' placeholder='Search...' data-bind="value:searchTerm, valueUpdate:'afterkeydown'")
    div(style='font-size:80%' data-bind='text:searchCaption')
    div(style='margin-bottom:5px;height:300px;overflow:auto;border:1px dotted #ccc')
      table(width="100%")
        tbody
          // ko foreach:entries
          tr
            td.flow-wide
              label
                input(type='checkbox' data-bind='checked:isSelected')
                span(data-bind='text:value')
            td.flow-narrow.flow-aside(data-bind='text:type')
            td.flow-narrow.flow-aside(data-bind='text:missingLabel')
          // /ko

    div(style='margin-bottom:10px')
      +command('Ignore These', 'selectFiltered', 'hasFilteredItems')
      +command('Include These', 'deselectFiltered', 'hasFilteredItems')
      +command('Ignore All', 'selectAll')
      +command('Include All', 'deselectAll')

    div
      button.flow-button(type='button' data-bind="click:goToPreviousPage, enable:canGoToPreviousPage")
        i.fa.fa-arrow-left
        span Previous 100

      button.flow-button(type='button' data-bind="click:goToNextPage, enable:canGoToNextPage")
        i.fa.fa-arrow-right
        span Next 100

    div(style='font-size:80%')
      | Only show columns with more than&nbsp;
      input.flow-textbox(type='text' style='width:30px' placeholder='0' data-bind="value:ignoreNATerm, valueUpdate:'afterkeydown'")
      | % missing values.

tr(data-bind="css:{'bg-danger':hasError, 'bg-warning':hasWarning, 'bg-info':hasInfo}, visible:hasMessage")
  th &nbsp;
  td(colspan='2' data-bind='text:message')

