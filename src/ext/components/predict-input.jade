.flow-widget
  +subtitle('Predict', 'bolt')

  table.flow-form
    tr
      th(width='1')
        label Key:
      td
        input(data-bind="value:destinationKey")
    tr
      th(width='1')
        label Model:
      td
        // ko if:hasModels
        span(data-bind='text:selectedModelsCaption')
        // /ko
        // ko ifnot:hasModels
        select(data-bind="options:models, value:selectedModel, optionsCaption:'(Select)'")
        // /ko
    tr
      th
        label Frame:
      td
        // ko if:hasFrames
        span(data-bind='text:selectedFramesCaption')
        // /ko
        // ko ifnot:hasFrames
        select(data-bind="options:frames, value:selectedFrame, optionsCaption:'(Select)'")
        // /ko

    // ko if:hasAdditionalOptions
    tr
      th
        label Compute Reconstruction Error:
      td
        input(type='checkbox' data-bind="checked:computeReconstructionError")
    // ko ifnot:computeReconstructionError
    tr
      th
        label Compute Deep Features Hidden Layer:
      td
        input(type='checkbox' data-bind="checked:computeDeepFeaturesHiddenLayer")
        // ko if:computeDeepFeaturesHiddenLayer
        span Hidden Layer #:
        input.flow-textbox(type='textbox' style='width:50px' data-bind="value:deepFeaturesHiddenLayer, valueUpdate:'afterkeydown'")
        // /ko

    // /ko
    // /ko
    tr
      th
        label Actions:
      td
        button.flow-button(type='button' data-bind='click:predict, enable:canPredict')
          i.fa.fa-bolt
          span Predict

