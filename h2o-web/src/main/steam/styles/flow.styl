//
//

.f-navbar
  border-top 5px solid f-color-yellow

.f-header
  border-top 5px solid f-color-yellow
  padding 20px 0  
  .f-logo
    margin-left 5px

.f-cell
  position relative
  padding-left 5px
  border-left 3px solid transparent
  .f-cell-type
    display none
    position absolute
    width 25px
    left -28px
    top 0
    text-transform uppercase
    font-size 10px
    background f-color-yellow
    padding 1px 3px
    text-align center
  .f-cell-input
    textarea
      color #333
      width 100%
      max-height 500px
      border none
      border-left 2px solid tomorrow-orange
      monospace()
      background url(../img/stripes.png)
      padding 5px 10px
    &.f-cell-has-output
      textarea
        border-left 2px solid tomorrow-blue

  &.f-cell-selected
    border-color f-color-yellow
    .f-cell-type
      display block
  &.f-cell-active
    border-color f-color-orange
    .f-cell-type
      background f-color-orange
      color #fff
    .f-cell-input
      textarea
        background f-color-yellow-lt
  &.f-cell-busy
    border-color tomorrow-aqua
    .f-cell-type
      background tomorrow-aqua
      color #fff
  &.f-cell-error
    border-color red
    .f-cell-type
      background red
      color #fff
  
// 
// Styles that apply only to html cells 
// 

.f-html-output
  h1, h2, h3, blockquote
    font-weight 300

.f-raw-output
  pre
    background inherit

.f-widget
  padding 0 10px
  margin-bottom 40px

.f-well
  margin 10px 0
  padding 10px
  border 1px dotted #ccc

.f-commands
  margin-top 20px
  padding 10px 0

.f-mono
  monospace()

.f-pointer
  cursor pointer

table
  &.f-table-horizontal
    width 100%
    th, td
      padding 2px 5px
      vertical-align top
    th:first-child
      text-align right
      line-height 20px
    tr.f-actions
      th, td
        padding-top 5px
        border-top 1px dotted #ccc

.f-narrow
  white-space nowrap

.f-wide
  width 99%

.f-icon
  margin-right 5px

.f-icon-r
  margin-left 5px

.f-bg-gray
  background-color #f5f5f5

.f-small
  font-size 85%

.f-small-caps
  smallcaps()

.f-align-right
  text-align right

.f-button
  cursor pointer
  border-radius 12px
  border 1px solid #ccc
  padding 2px 12px
  font-size: 85%
  background-color: #fff
  &:hover
    background-color #eee
    border-color #aaa
  &.f-button-toggle
    color #fff
    background-color #777
    border-color #777
    &:hover
      background-color #333
      border-color #333

.f-textbox
  width 100%
  border none
  border-bottom 1px solid #ccc
  &:focus
    border-bottom-color #000

.f-textarea
  width 100%
  border 1px solid #ccc

.f-tool
  padding 2px 7px
  border-radius 2px

.twitter-typeahead
  width 97%

.tt-dropdown-menu
  background #fff
  border 1px solid #ccc
  width 100%
  box-shadow 0 5px 10px rgba(0,0,0,.2)

.tt-suggestion
  padding 3px 10px
  line-height 24px
  overflow ellipsis
  &.tt-cursor
    background-color f-color-yellow
  p
    margin 0


