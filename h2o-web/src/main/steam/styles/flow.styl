@import 'nib'
tomorrow-current-line = #efefef
tomorrow-selection = #d6d6d6
tomorrow-foreground = #4d4d4c
tomorrow-comment = #8e908c
tomorrow-red = #c82829
tomorrow-orange = #f5871f
tomorrow-yellow = #eab700
tomorrow-green = #718c00
tomorrow-aqua = #3e999f
tomorrow-blue = #4271ae
tomorrow-purple = #8959a8
f-color-yellow = #FAF185
f-color-yellow-dk = #F6E76A
f-color-yellow-lt = #FBF3B5
f-color-orange = #F5A623


.container-fluid
  padding-left 50px
  padding-right 50px

.navbar-default
  background none
  border none
  margin-bottom 0
  .navbar-nav
    > .active
      > a, > a:hover, > a:focus
        background-color f-color-yellow
    > .open
      > a, > a:hover, > a:focus
        background-color f-color-yellow

.navbar-brand
  background url(../img/flow.png) 15px center no-repeat
  width 160px

monospace()
  font-family 'Source Code Pro', Menlo, Monaco, Consolas, "Courier New", monospace

smallcaps()
  font-weight 300
  text-transform uppercase
  font-size 10px
  letter-spacing 1px

body
  font-family Roboto, 'Source Sans Pro', Lato, 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif
  color #777

h1, h2, h3, h4
  font-weight 300

code, kbd, pre, samp
  monospace()

blockquote
  font-weight 300

pre
  background url(../img/stripes.png)
  border none
  border-radius 0

textarea
  &:focus
    outline none

input
  &:focus
    outline none

label
  font-weight normal
  input[type="radio"]
    margin-right 6px
  input[type="checkbox"]
    margin-right 6px

.table
  thead
    tr
      th
        border-bottom 1px solid #ccc

th
  smallcaps()


//
// Bootstrap overrides
//

.alert
  border-radius 0


