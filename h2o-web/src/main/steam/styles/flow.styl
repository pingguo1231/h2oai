@import 'nib'
tomorrow-current-line = #efefef
tomorrow-selection = #d6d6d6
tomorrow-foreground = #4d4d4c
tomorrow-comment = #8e908c
tomorrow-red = #c82829
tomorrow-orange = #f5871f
tomorrow-yellow = #eab700
tomorrow-green = #718c00
tomorrow-aqua = #3e999f
tomorrow-blue = #4271ae
tomorrow-purple = #8959a8
f-color-yellow = #FAF185
f-color-yellow-dk = #F6E76A
f-color-orange = #F5A623

monospace()
  font-family 'Source Code Pro', monospace

body
  font-family 'Source Sans Pro', Lato, 'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif

textarea
  &:focus
    outline none

input
  &:focus
    outline none

.f-header
  border-top 5px solid f-color-yellow
  padding 20px 0  
  .f-logo
    margin-left 5px

.f-cell
  position relative
  padding-left 10px
  border-left 3px solid transparent
  .f-cell-type
    display none
    position absolute
    width 25px
    left -28px
    top 0
    text-transform uppercase
    font-size 10px
    background f-color-yellow
    padding 1px 3px
    text-align center
  .f-cell-input
    //border-left 5px solid f-color-yellow-dk
    textarea
      width 100%
      max-height 500px
      border none
      monospace()
      background f-color-yellow
      padding 5px 10px
  // rework this into a bootrap overrides section
  .progress
    height 9px
    margin 20px
  &.f-cell-busy
    border-color tomorrow-red //TODO
  &.f-cell-error
    border-color tomorrow-red
  &.f-cell-selected
    border-color f-color-yellow
    .f-cell-type
      display block
  &.f-cell-active
    .f-cell-type
      background f-color-orange
      color #fff
    border-color f-color-orange
  
// 
// Styles that apply only to html cells 
// 

.f-html-output
  h1, h2, h3, blockquote
    font-weight 300
  pre
    border none
    border-radius 0

.f-raw-output
  pre
    border none
    border-radius 0
    background inherit

