<suite name="Water multi-node suite" verbose="2">
    <!-- A test which runs before a cloud is formed, and confirms the cloud does not lock and can add more nodes -->
    <test name="pre cloud">
        <packages>
            <package name="water.api" />
        </packages>
    </test>
    <test name="five node cloud">
        <groups>
            <run>
                <exclude name="runOnceAtStart"/>
                <exclude name="NOPASS" />
            </run>
        </groups>
        <packages>
            <package name="water.testframework.fivenode" />
            <package name="water.api" />
            <package name="water.cascade" />
            <package name="water.fvec" />
            <package name="water.parser" />
            <package name="water" />
        </packages>
    </test>
</suite>
